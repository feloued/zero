<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".societe">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:autoStart="true"
                android:flipInterval="3000">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@drawable/tcv"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@drawable/fts"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@drawable/rahimo"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@drawable/rakieta"
                    >

                </ImageView>

            </ViewFlipper>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="#006C79"
            android:text="Choisir la société"
            android:textSize="36sp"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/selectbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btn_societe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CDDC39"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@android:drawable/ic_media_play"
            android:text="etape suivante"
            android:textAllCaps="true"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>