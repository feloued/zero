<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ticket">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="Felicitation Votre ticket est pret"
        android:textColor="#006C79"
        android:textSize="16sp"

        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imgQR"
        android:layout_width="205dp"
        android:layout_height="348dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        app:srcCompat="?attr/actionBarDivider" />

    <Button
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:background="#CDDC39"
        android:drawableStart="@android:drawable/ic_menu_upload_you_tube"
        android:text="Telecharger mon ticket" />
</LinearLayout>